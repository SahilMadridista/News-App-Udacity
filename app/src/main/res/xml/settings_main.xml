<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/menu_title">

    <ListPreference
        android:title="@string/settings_select_section_label"
        android:entries="@array/section_labels"
        android:entryValues="@array/section_values"
        android:key="@string/settings_select_section_key"
        android:defaultValue="@string/settings_min_date_default_value"/>

    <EditTextPreference
        android:title="@string/settings_min_date_label"
        android:inputType="date"
        android:key="@string/settings_min_date_key"
        android:selectAllOnFocus="true"
        android:defaultValue="@string/settings_min_date_default_value"/>

</PreferenceScreen>